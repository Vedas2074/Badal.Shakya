@model List<Employee>

@{
  ViewData["Title"] = "EmployeeList";
}

<h2>All Employees</h2>


<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Id</th>
      <th scope="col">FirstName</th>
      <th scope="col">LastName</th>
      <th scope="col">Address</th>
      <th scope="col">Salary</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    @foreach (var employee in Model)
    {
    <tr>
        <th scope="row">@employee.Id</th>
        <td>
          <a href="/employee/detail?id=@employee.Id">@employee.FirstName</a>
        </td>
        <td>@employee.LastName</td>
        <td>@employee.Address</td>
        <td>@employee.Salary</td>
        <td>
          <a class="btn btn-warning" href="/Employee/update?id=@employee.Id">Update Record</a>
          <a class="btn btn-danger" href="/Employee/delete?id=@employee.Id">Delete Record</a>
        </td>
    </tr>
    }
  </tbody>
</table>