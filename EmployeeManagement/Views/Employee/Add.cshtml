@model Employee
@{
  ViewData["t"] = "Add Employee";
}
<form asp-controller="Employee" asp-action="Add" method="POST">
  <div class="form-group">
    <label asp-for="FirstName">First Name</label>
    <span asp-validation-for="FirstName" class="text-danger"></span>
    <input type="text" class="form-control" asp-for="FirstName" aria-describedby="emailHelp" placeholder="Enter first name">
    
  </div>
  <div class="form-group">
    <label asp-for="LastName">Last Name</label>
    <span asp-validation-for="LastName" class="text-danger"></span>
    <input type="text" class="form-control" asp-for="LastName" placeholder="Enter last name">
  </div>
  <div class="form-group">
    <label asp-for="Address">Address</label>
    <textarea class="form-control" asp-for="Address" rows="3">Address</textarea>
  </div>
  <div class="form-group">
    <label asp-for="Salary">Salary</label>
    <input type="number" class="form-control" asp-for="Salary" placeholder="Enter Salary">
  </div>
  
  <button type="submit" class="btn btn-primary">Add Employee</button>
</form>